<% unless user == current_user %>
  <% if current_user.following?(user) %>
    <%= button_to("Unfollow", user_follow_path(user.to_param, current_user.get_follow(user).id), :method => :delete, :remote => true, :class => 'btn btn-info btn-md') %>
  <% else %>
    <%= button_to("Follow", user_follows_path(user.to_param), :remote => true, :class => 'btn btn-info btn-md') %>
  <% end %>
<% end %>