<p id="notice"><%= notice %></p>

<div class="maincont">
<table-responsive>
    <table>
        <div class ="table-condensed table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Category Name</th>
                    <th>Category Weight</th>
                    <th>Delete</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <% @categories.each do |category| %>
                    <td><%= category.id %></td>
                    <td><%= category.category_name %></td>
                    <td><%= category.weightage %></td>
                    <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                          
                </tr>   
                    <% end %>
            </tbody>
        </div>
    </table>
<br>
</table-responsive>

<%= link_to 'New Category', new_category_path %>

</div>

