<%# Please make sure to update 'forms/social_image.html.erb' file if this file is updated %>

<div class="boardContainer" ng-controller="LikedBoardCtrl" ng-init="init(<%= @liked_boards %>, <%= @keys %>)">
  <style type="text/css">        
    .bookmark-button {
      border: none;
      background: transparent;
    }
    .bookmark-button:focus {outline:0;}
  </style>
  <div>
    <div ng-repeat="board in liked_boards | orderBy:'updated_at':true" ng-init="outerIndex=$index; boardsLength=liked_boards.length" ng-class="(boardsLength%3 != 0 && (boardsLength-1) == outerIndex) ? 'fullBoard' : ((outerIndex%3 == 0) ? 'fullBoard' : 'halfBoard')">
      <%= render 'static_pages/board'%>
    </div>
  </div>
</div>
<style type="text/css">
    .empty
  { 
    color: white;
    text-shadow: -2px 0 #9c1717, 0 2px #9c1717, 2px 0 #9c1717, 0 -2px #9c1717;
  }
</style>