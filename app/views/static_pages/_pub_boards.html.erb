<div class="boardContainer" ng-controller="PubBoardCtrl" ng-init="init(<%= @pub_boards %>, <%= @keys %>)">

  <div infinite-scroll='nextPage()' infinite-scroll-disabled='busy' infinite-scroll-distance="3">
    
    <section class="cards" layout="row" layout-wrap>
      <div ng-repeat="board in pub_boards" ng-init="outerIndex=$index" ng-class="(outerIndex%3 == 0) ? 'flex-100' : 'flex-50'">

        <%= render 'static_pages/board'%>

      </div>
  </section>
  </div>
</div>
