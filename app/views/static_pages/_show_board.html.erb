
<div class="boardContainer" ng-controller="ShowBoardCtrl" ng-init="init(<%= @pub_boards %>, <%= @keys %>)">
  <style type="text/css">
    .flickity-page-dots {
      display: none;
    }
    .article-cell {
      width: 250px !important;
      border: 1px solid #e3e3e3;
      box-shadow: 0px 1px 1px #888888;
      z-index: 3;
      margin: 20px 0.5%;
      background-color:white;
    }
    .bookmark-button {
      border: none;
      background: transparent;
    }
    .bookmark-button:focus {outline:0;}
  </style>
  <div ng-repeat="board in pub_boards" ng-init="outerIndex=$index">
    
    <%= render 'static_pages/board'%>    
  </div>
</div>
<style type="text/css">
    .empty
  { 
    color: white;
    text-shadow: -2px 0 #9c1717, 0 2px #9c1717, 2px 0 #9c1717, 0 -2px #9c1717;
  }
</style>