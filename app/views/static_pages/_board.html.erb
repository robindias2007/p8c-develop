  </md-card-content>
  <md-divider></md-divider>
  <md-card-header class="card-footer" layout="row" layout-align="start center">
    
    <md-card-avatar>
      <a href="/{{board.user.username}}/published" id="AuthorName" ng-click="boardAuthorClick(board, <%= current_user.to_json %>)">
        <img class="md-user-avatar" src="{{board.user_image}}"/>
      </a>
    </md-card-avatar>
     

    <md-card-header-text>
      <a href="/{{board.user.username}}/published" id="AuthorName" ng-click="boardAuthorClick(board, <%= current_user.to_json %>)"><span class="md-title">{{board.user.username}}</span></a>
      <span class="md-subhead">{{board.updated_at  |  date : format : timezone}}</span>
    </md-card-header-text>

    <md-card-actions layout="row" layout-align="start center">
      <md-card-icon-actions>
         <md-fab-speed-dial ng-cloak md-direction="left" class="md-fling md-ink-ripple" docs-scroll-class="scrolling">
          <md-fab-trigger>
            <md-button class="md-icon-button" style="width:40px;height:40px; background:white; margin: 0px">
              <md-icon>
                <a id="" data-remote="true" href="" ng-click="">
                  <i class="material-icons" >share</i>
                </a>
              </md-icon>
            </md-button>
          </md-fab-trigger>

          <md-fab-actions>
            <md-button aria-label="Facebook" style="width:35px;height:35px; margin: 0px" class="md-icon-button">
              <md-icon>
                <a id="" target="_blank" ng-click="trackFacebookShareClicked(board, <%= current_user.to_json %>)" href="https://www.facebook.com/dialog/share?app_id={{facebook_key}}&display=popup&href={{location}}{{board.user.username}}/{{board.slug_url}}">
                  <%= image_tag 'facebook.png' %>
                </a>
              </md-icon>
            </md-button>
            <md-button aria-label="Twitter" style="width:35px;height:35px; margin: 0px" class="md-icon-button">
              <md-icon>
                <a id="" target="_blank" ng-click="trackTwitterShareClicked(board, <%= current_user.to_json %>)" href="https://twitter.com/intent/tweet?url={{location}}{{board.user.username}}/{{board.slug_url}}">
                  <%= image_tag 'twitter.png' %>
                </a>
              </md-icon>
            </md-button>
            <md-button aria-label="Copy" style="width:35px;height:35px; margin: 0px" class="md-icon-button">
              <md-icon>
                <a id="" data-remote="true" href="" ng-click="copyToClipboard(board.form_url, board, <%= current_user.to_json %>);">
                  <i class="material-icons">link</i>
                </a>
              </md-icon>
            </md-button>
          </md-fab-actions>
        </md-fab-speed-dial>

        <md-button class="md-icon-button" aria-label="Bookmark" style="margin: 0px">
          <md-icon>
            <a id="" ng-show="board.bookmark" data-remote="true" href="/forms/{{board.id}}/booknot" ng-click="update_bookmark(board, <%= current_user.to_json %>)"><i class="material-icons">bookmark</i></a>
            <a id="" ng-hide="board.bookmark" data-remote="true" href="/forms/{{board.id}}/book" ng-click="update_bookmark(board, <%= current_user.to_json %>)"><i class="material-icons">bookmark_border</i></a>  
          </md-icon>
        </md-button>
        <p style="padding-top:5%">{{board.likes}}</p>
        <md-button class="md-icon-button" aria-label="Favorite" style="margin: 0px">
          <md-icon>
            <a id="" ng-show="board.liked" data-remote="true" href="/forms/{{board.id}}/unlike" ng-click="update_like(board, 'unlike', <%= current_user.to_json %>)"><i class="material-icons">favorite</i></a>
            <a id="" ng-hide="board.liked" data-remote="true" href="/forms/{{board.id}}/like" ng-click="update_like(board, 'like', <%= current_user.to_json %>)"><i class="material-icons">favorite_border</i></a>
          </md-icon>
        </md-button>
            
      </md-card-icon-actions>
    </md-card-actions>
  </md-card-header>
</md-card>
<script type="text/javascript">
    mixpanel.track_links("#AuthorName", "click author name", {
        "referrer": document.referrer
    });
</script>








