<%# Please make sure to update 'forms/social_image.html.erb' file if this file is updated %>

<div class="boardContainer" ng-controller="AppCtrl" ng-init="init()">
  <style type="text/css">
    .flickity-page-dots {
      display: none;
    }
    .article-cell {
      width: 250px !important;
      border: 1px solid #e3e3e3;
      box-shadow: 0px 1px 1px #888888;
      z-index: 3;
      margin: 20px 0.5%;
      padding: 0px 15px;
      background-color:white;
    }
    .bookmark-button {
      border: none;
      background: transparent;
    }
    .bookmark-button:focus {outline:0;}
  </style>    
    <div class="col-md-9 container1" ng-repeat="item in items">  <!-- The elements of the entire box. -->  
      <div class="col-md-12 container5">
        <div class="container7">
          <% if user_signed_in? %>
            <% if @home_user %>
              <div class="date" id="profile">
                <a href="/user/{{item.user.username}}/publish">
                  <i class="material-icons">account_circle</i>
                  <div id="prouser">{{item.user.username}}</div> 
                </a> &nbsp; &#183; &nbsp;
                <h10 class="date">{{item.updated_at}}</h10>
                <h10 class="date"></h10>
                <div class="date">
                  &nbsp; &#183; &nbsp;
                </div>
              </div>
            <% else %>
              <div class="date" id="profile">
                <a href="/user/{{item.user.username}}/publish">
                  <i class="material-icons">account_circle</i>
                  <div id="prouser">{{item.user.username}}</div>
                </a>&nbsp; &#183; &nbsp;
                <h10 class="date">{{item.updated_at}}</h10>
                <h10 class="date"></h10>
                <div class="date">
                  &nbsp; &#183; &nbsp;
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="date" id="profile">
              <a href="/users/sign_in">
                <i class="material-icons">account_circle</i>
                <div id="prouser">{{item.user.username}}</div>
              </a>&nbsp; &#183; &nbsp;
              <h10 class="date">{{item.updated_at}}</h10>
              <h10 class="date"></h10>
              <div class="date">
                &nbsp; &#183; &nbsp;
              </div>
            </div>
          <% end %>          
          <a href="/forms/{{item.id}}"><h2 class="title">{{item.title}}</h2></a> 
        </div>
        <div class="container8">
          <% if user_signed_in? %>
            <div class="like">   
              <!-- This contains all the elements to like the button where we have the heart option -->
              <h10 class="date">{{item.likes}} &nbsp;</h10>              
            </div>
          <% else %>
            <div class="like">
              <h10 class="date">{{item.likes}} &nbsp;</h10>
              <i class="material-icons">favorite</i> 
            </div>
          <% end %>  
          <div class="share">
            <div class="social-share-options" style="display: none;">
              
            </div>
            <%= link_to 'javascript:void(0)', class: 'social-share-link' do %>
              <h10 class="date">Share</h10>
              <i class="material-icons">share</i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="container2" style="width: 100%">
        <div class="col-md-4" id="description"> 
          <!-- Bootstrap to divide the entire page into colums -->    
          <h5 class="internal_text">{{item.dsc}}</h5>
        </div>
        <div id="verticalLine"></div>
        <div class="container3" style="overflow-x: hidden">
          <!-- This is for the second container. Those 5 blocks on the right side. Inside this we have 5 columns --> 
          <ul class="row" bc-flickity="{{ flickityOptions }}" style="width: 100%">          
            
              <li class="article-cell" ng-repeat="link in item.links">  
                <a href="{{link.url}}" target="framename", id="formclick" >                 
                  <hr>
                  <h4 class="title1">
                    {{link.title}}
                  </h4>                
                  <div class="container6">
                    <figure class="effect-sadie">
                        <img ng-show="link.image" src="{{link.image}}" />                  
                        <img ng-hide="link.image" src="/whiteimage.jpg" />                    
                    </figure>
                  </div>                
                  <div id="link">
                    <%= "{{link.url}}".sub(/https?\:(\\\\|\/\/)(www.)?/,'').split('/').first %>                  
                  </div>                 
                  <br>
                  <h6 class="internal_text1">{{link.dsc}}</h6>                
                  <hr>
                </a>
              </li>
          </ul>
        </div>
        <div id="hScroll">
          <i class="material-icons md-24" , id="addHScroll">chevron_right</i>
        </div>
        <div class="col-md-12 container4">
          <div class="boardFooter date">        
          </div>
        </div>
      </div>
    </div>
</div>
<style type="text/css">
    .empty
  { 
    color: white;
    text-shadow: -2px 0 #9c1717, 0 2px #9c1717, 2px 0 #9c1717, 0 -2px #9c1717;
  }
</style>