<%# Please make sure to update 'forms/social_image.html.erb' file if this file is updated %>

<div class="boardContainer" ng-controller="DraftBoardCtrl" ng-init="init(<%= @draft_boards %>)">
  <style type="text/css">        
    .bookmark-button {
      border: none;
      background: transparent;
    }
    .bookmark-button:focus {outline:0;}
  </style>
  <div>   
    <div ng-repeat="board in draft_boards | orderBy:'updated_at':true" ng-init="outerIndex=$index;">
      <%= render 'static_pages/board'%>
    </div>
  </div>
</div>
<style type="text/css">
    .empty
  { 
    color: white;
    text-shadow: -2px 0 #9c1717, 0 2px #9c1717, 2px 0 #9c1717, 0 -2px #9c1717;
  }
</style>