<p id="notice"><%= notice %></p>

<h1>Blog List</h1>
<div class="formlist">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Url1</th>
      <th>Url2</th>
      <th>Url3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forms.each do |form| %>
      <tr>
        <td><%= form.title %></td>
        <td><%= form.description %></td>
        <td><%= form.url1 %></td>
        <td><%= form.url2 %></td>
        <td><%= form.url3 %></td>
        <td><%= link_to 'Show', form %></td>
        <td><%= link_to 'Edit', edit_form_path(form) %></td>
        <td><%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

