<style>
  .dropbtn {    
    padding: 15px;
    font-size: 16px;
    border: none;
    cursor: pointer;
}

.dp {    
    display: inline-block;
}

.dropdown-content {
    display: none;
    position: absolute;
    right: 0px;
    left: 0px;
    background-color: #f9f9f9;    
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
    border-bottom: 5px solid rgb(156,23,23);    
    padding: 0;
    white-space: nowrap;    
}

.dp ul {
  background: white;
  list-style: none;
  padding: 0;
  text-align: center;
  display: none;
  width: 100vw;
  position: absolute;  
  left: 0px;
  border-bottom: 5px solid #9c1717;
  font-size: 0px;
  margin-top: 15px;
}

.dp ul .layout-fill {
  display: inline-block;
}

.dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.dropdown-content a:hover {background-color: #f1f1f1}

.dp:hover ul {
    display: block;
}

.dp ul li {
  display: inline-block;
  vertical-align: top;
  font-size: 16px;
}

.dp:hover .dropbtn {
    background-color: rgba(158,158,158,0.2);
}

.vertical-divider {
  border-top-width: 0;
  border-right-width: 1px;
  border-right-style: solid;
  height: 100%;
}

.veritcal-border {
    background-color: #9c1717;
    content: '';
    height: 100%;
    margin-left: 0px;
    position: absolute;
    top: 0;
    width: 1px;
    z-index: 10;
}
</style>

