<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<div class="visible-md visible-lg visible-sm">
  <md-toolbar md-scroll-shrink ng-if="true" class="curativ-header" ng-controller="headerCtrl as ctrl" ng-cloak>
    <div class="md-toolbar-tools">
      <a href="/">
        <%= image_tag 'thecurativ.png' %>
      </a>
        
        <md-button md-no-ink class=""><a href="/">Home</a></md-button>
        <md-button md-no-ink class=""><a href="/staff_picks">Staff's Pick</a></md-button>
        <md-button md-no-ink class=""><a href="/trending">Trending</a></md-button>
        <md-menu md-position-mode="target target" md-offset="20 60">        
          <md-button md-no-ink md-menu-origin class="" aria-label="More1" ng-click="$mdOpenMenu($event)" style="box-shadow: none">Discover<md-icon><i class="material-icons">keyboard_arrow_down</i></md-icon>
          </md-button>        
          <md-menu-content width="3" layout="row" style="" layout-xs="column">
            <div layout-fill>
              <md-toolbar>
                <div class="md-toolbar-tools">
                  <span>Categories</span>
                </div>
              </md-toolbar>
              <% Category.all.where(weightage:1).each do |f| %>
                <md-menu-item>
                    <md-button>
                      <a layout="row" layout-align="center center" style="width: 100%; height: 100%" href='/categories/<%= f.category_name %>'><%= f.category_name.capitalize %></a>
                    </md-button>
                </md-menu-item>
              <% end %>
            </div>
            <md-divider></md-divider>
            <div layout-fill>
              <md-toolbar>
                <div class="md-toolbar-tools">
                  <span>Filters</span>
                </div>
              </md-toolbar>
              <!-- <md-content> -->
                <md-menu-item>
                  <md-button>
                    <a layout="row" layout-align="center center" style="width: 100%; height: 100%" md-menu-align-target href="/most_recent">Most Recent</a>
                  </md-button>
                </md-menu-item>
                <md-menu-item>
                  <md-button>
                    <a layout="row" layout-align="center center" style="width: 100%; height: 100%" href="/most_popular">Most Popular</a>
                  </md-button>
                </md-menu-item>            
                <md-menu-item>
                  <md-button>
                    <a layout="row" layout-align="center center" style="width: 100%; height: 100%"  href="/most_saved">Most Saved</a>
                  </md-button>
                </md-menu-item>  
              <!-- </md-content> -->          
            </div>
                     
           
          </md-menu-content>
        </md-menu>
      <div class="md-truncate flex"></div>
      <span style="font-size: 18px"><%= current_user.username %></span>
      <md-menu md-position-mode="target-right target" md-offset="0 70">        
        <md-button class="md-fab md-mini" aria-label="More" md-menu-origin ng-click="$mdOpenMenu($event)" style="box-shadow: none; padding: 0px">          
          <% if current_user.avatar_file_name != nil %>
            <img class="user-avatar" src="<%= current_user.avatar.url %>">
          <% else %>
            <md-icon md-font-icon="icon-home" style="font-size: 24px;"
            class="step "><i class="material-icons" style="" >account_circle</i></md-icon>            
          <% end %> 
        </md-button>        
        <md-menu-content width="3">
          <md-menu-item>
            <md-button ng-click="" aria-label="">              
              <a layout="row" layout-align="center center" style="width: 100%; height: 100%" md-menu-align-target href="/<%= current_user.username %>/published">Published</a>
            </md-button>
          </md-menu-item>
          <md-menu-item>
            <md-button>
              <a layout="row" layout-align="center center" style="width: 100%; height: 100%" href="/<%= current_user.username %>/drafts">Drafts</a>
            </md-button>
          </md-menu-item>
          <md-menu-item>
            <md-button>
              <a layout="row" layout-align="center center" style="width: 100%; height: 100%" href="/<%= current_user.username %>/saved">Saved</a>
            </md-button>
          </md-menu-item>
          <md-menu-item>
            <md-button>
              <a layout="row" layout-align="center center" style="width: 100%; height: 100%" href="/users/edit">Edit Profile</a>
            </md-button>
          </md-menu-item>
          <md-menu-divider style="background-color: rgba(0,0,0,0.11)"></md-menu-divider>
          <md-menu-item>
            <md-button>
              <a data-method="delete" layout="row" layout-align="center center" style="width: 100%; height: 100%" href="/users/sign_out">Sign out</a>
            </md-button>
          </md-menu-item>
          <% if Admin.where(email:current_user.email).present? %>
            <md-menu-item>
              <md-button>
                <a layout="row" layout-align="center center" style="width: 100%; height: 100%" href="/dashboard">Admin Tools</a>
              </md-button>
            </md-menu-item>            
          <% end %>
          <% if admin_signed_in? %>
            <md-menu-item>
              <md-button>
                <a data-method="delete" layout="row" layout-align="center center" style="width: 100%; height: 100%" href="/admins/sign_out">Sign out Admin</a>
              </md-button>
            </md-menu-item>            
          <% end %>
        </md-menu-content>
      </md-menu>
    </div>          
      
  </md-toolbar>


  <md-button class="md-fab md-fling md-fab-bottom-right docs-scroll-fab md-ink-ripple" style="position: fixed">
    <a href="/<%= current_user.username %>/new_form">
    <md-tooltip md-direction="left">Create Curate</md-tooltip>
    <md-icon><i class="material-icons">add</i></md-icon>
    </a>
  </md-button>
</div>

<div class="visible-xs">
  
  <section>
    <div class="row">
      <div class="navbar-nav col-xs-12">
        <div class="col-xs-3">
          <button type="button" class="navbar-toggle collapsed", data-toggle="collapse" data-target="#header-links" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button> 
        </div>
        <div class="col-xs-6">
          <a class="logo img-responsive img-center" href="/">
            <%= image_tag("thecurativ.png") %> 
          </a>
        </div>
        <div class="col-xs-3"></div>
      </div>
    

      <div class="collapse navbar-collapse" id="header-links">
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home<span class="sr-only" id="header-color">(current)</span></a></li>
          <li><a href="/staff_picks" id="header-color">Staff Picks</a></li>
          <li><a href="/trending" id="header-color">Trending</a></li>
          <li><a href="/" id="header-color">Home4</a></li>
          <li><a href="/" id="header-color">Home5</a></li>
        </ul>
      </div>
    </div>
  </section>

</div>



