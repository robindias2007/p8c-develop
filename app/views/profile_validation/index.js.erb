var userModal = $('#editUserModal');

<% if @errors.present? %>
  <% if @errors[:username].present? %>
    setProfileError('username', "<%= @errors[:username].first.titleize.html_safe %>");
  <% else %>
    clearUsernameError();
  <% end %>

  <% if @errors[:email].present? %>
    setProfileError('email', "<%= @errors[:email].first.titleize.html_safe %>");
  <% else %>
    clearEmailError();
  <% end %>

  userModal.find('input[type=submit]').prop('disabled', true);
<% else %>
  clearEmailError();
  clearUsernameError();
  userModal.find('input[type=submit]').prop('disabled', false);
<% end %>