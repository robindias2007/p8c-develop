<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

    <%= f.hidden_field :reset_password_token %>

    <div class='form-group'>
      <%= f.label :password, 'New password' %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: 'off', placeholder: 'New password', id: 'textfield' %>
    </div>

    <div class='form-group'>
      <%= f.label :password_confirmation, 'Confirm new password' %>
      <%= f.password_field :password_confirmation, autocomplete: 'off', placeholder: 'Confirm new password', id: 'textfield' %>
    </div>

    <div class='text-center'>
      <%= f.submit 'Change my password', class: 'btn btn-default' %>
    </div>
<% end %>