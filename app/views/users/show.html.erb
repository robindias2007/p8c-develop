
<br>

<div class="maincont">

<div style="color: black">

<% if user_signed_in? %> 
<% unless @user == current_user %> 
<% if current_user.following?(@user) %>
<%= link_to unfollow_follow_path(@user), method: :put, data: { toggle_text: 'Unfollow', toggle_href: follow_follow_path(@user), id: @user.id } do %>
<b>Unfollow</b>
<% end %>

<% else %>
<%= link_to follow_follow_path(@user), method: :put, data: { toggle_text: 'Follow', toggle_href: unfollow_follow_path(@user), id: @user.id } do %>
<b>Follow</b>
<% end %>
<% end %>
<% end %>
<% end %>

</div>

<div class="col-md-10" id="userProfile">
<div id="username">
	<i class="material-icons md-120">account_circle</i>
	<div id="userDescription">
		<h4><%= @user.username  %></h4>		
	</div>
</div>



<% if current_user.username == @user.username %>


<div class="userStats">
<div class="formlist">
<ul class="count">
	<li><%= Form.where(user_id:current_user.id, publish:true).count %></li>
	<li><%= Form.where(user_id:current_user.id, publish:false).count %></li>
	<li><%= Form.where(id: current_user.find_up_voted_items).count %></li>
</ul>



<ul class="board">
	<li><%= link_to 'Published', static_pages_publish_path, id:"board" %></li>
	<li><%= link_to 'Drafts', static_pages_drafts_path, id:"board1" %></li>
	<li><%= link_to 'Saved', static_pages_saved_path, id:"board2" %></li>
</ul>
</div>

<ul class="followers">
	<li><%= current_user.all_following.count %> Following</li>
	<li></li>
	<li><%= current_user.followers.count %> Followers</li>
</ul>
</div>
</div>
</div>

<% else %>

<div class="userStats">
<div class="formlist">
<ul class="count">
	<li></li>
	<li><%= Form.all.where("user_id = ?",User.find_by_username(params[:id]).id ).where(publish:true).count %></li>
	<li></li>
</ul>

<ul class="board">
	<li></li>
	<li><a href= "/user/<%= @user.username  %>", id="board1">Published</a></li>
	<li></li>
</ul>

<ul class="followers">
	<li><%= @user.all_following.count %> Following</li>
	<li></li>
	<li><%= @user.followers.count %> Followers</li>
</ul>
</div>
</div>

<% end %>


<%= render 'static_pages/boards'%>


</div>


</div>
