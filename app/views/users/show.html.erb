<% if user_signed_in? %>
  <div id="follow_user">
    <%= render :partial => "forms/follow_button", :locals => {:user => @user} %>
  </div>
 <%= current_user.follow_count %>
<% end %>
<br>

<div class="maincont">
<div class="col-md-10" id="userProfile">
<div id="username">
	<i class="material-icons md-120">account_circle</i>
	<div id="userDescription">
		<h4><%= @username  %></h4>		
	</div>
</div>




<% if current_user.username == @username %>


<div class="userStats">
<div class="formlist">
<ul class="count">
	<li><%= Form.where(user_id:current_user.id, publish:true).count %></li>
	<li><%= Form.where(user_id:current_user.id, publish:false).count %></li>
	<li><%= Form.where(id: current_user.find_up_voted_items).count %></li>
</ul>


<ul class="board">
	<li><%= link_to 'Published', static_pages_publish_path, id:"board" %></li>
	<li><%= link_to 'Drafts', static_pages_drafts_path, id:"board1" %></li>
	<li><%= link_to 'Saved', static_pages_saved_path, id:"board2" %></li>
</ul>
</div>

<ul class="followers">
	<li>42 Following</li>
	<li></li>
	<li>15 Followers</li>
</ul>
</div>
</div>
</div>

<% else %>

<div class="userStats">
<div class="formlist">
<ul class="count">
	<li></li>
	<li><%= Form.all.where("user_id = ?",User.find_by_username(params[:id]).id ).where(publish:true).count %></li>
	<li></li>
</ul>

<ul class="board">
	<li></li>
	<li><a href= "/user/<%= @username  %>", id="board1">Published</a></li>
	<li></li>
</ul>

<ul class="followers">
	<li>42 Following</li>
	<li></li>
	<li>15 Followers</li>
</ul>
</div>
</div>

<% end %>


<%= render 'static_pages/boards'%>


</div>


</div>
