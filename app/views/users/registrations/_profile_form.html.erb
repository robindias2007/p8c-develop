<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <md-tabs md-dynamic-height md-border-bottom>
    <md-tab label="Profile Settings">
      <md-content class="md-padding">
        <h1 class="md-display-2"></h1>
        
        <div class="form-group">
          <%= f.label :Profile_Picture %>
          <%= f.file_field :avatar %>
        </div>

        <div id="target">
        </div>

        <md-input-container class="md-block md-accent">
          <label>Email</label>
          <%= f.text_field :email, disabled: true %>
        </md-input-container>

        <md-input-container class="md-block md-accent">
          <label>Username</label>
          <%= f.text_field :username, disabled: true %>
        </md-input-container>

        <md-input-container class="md-block md-accent">
          <label>Name</label>
          <%= f.text_field :name %>
        </md-input-container>

        <md-input-container class="md-block md-accent">
          <label>Edit Description</label>
          <textarea value='"<%= resource.author %>"' name="resource[author]" id="user_author" md-maxlength="150" rows="5" md-select-on-focus ><%= resource.author %></textarea>
        </md-input-container>
        <md-button class="md-accent md-hue-1 md-raised" type="submit" name="commit" value="Update">Update</md-button>  
        
      </md-content>
    </md-tab>
    
    <md-tab label="Category Preferences">
      <md-content class="md-padding">
        <h1 class="md-display-2"></h1>
        
        <!--<% Category.all.each do |c| %>
          <md-list>
            <md-list-item>
                <label for="user_categories_ids_<%= c.category_name%>" class="md-subhead text-modal-body"> <%= c.category_name.capitalize %></label>
                <input id="user_categories_ids_<%= c.category_name %>" name="user[categories_ids][]" type="checkbox" value="<%= c.category_name %>" />
            </md-list-item>
          </md-list>
        <% end %> -->

        <div class="form-group">
          <%= f.label :categories %>
          <%= f.collection_check_boxes :categories_ids, Category.all, :category_name, :category_name %>
        </div>
        
        <md-button class="md-accent md-hue-1 md-raised" type="submit" name="commit" value="Update">Update</md-button>
      </md-content>
    </md-tab>
    
    <md-tab label="Privacy & Other">
      <md-content class="md-padding">
        <h1 class="md-display-2"></h1>
        
        <md-button>
          <p class="change-password submit-btn text-modal-body">Click Here To Change Password</p>
        </md-button>
        <br>

        <md-input-container class="md-block" style="display: none" id="newpass">
          <label>Password</label>
          <%= f.password_field :password %>
        </md-input-container>

        <md-input-container class="md-block" style="display: none" id="newpasscof">
          <label>Password Confirmation</label>
          <%= f.password_field :password_confirmation %>
          <br><br><br>
          <md-button class="md-accent md-hue-1 md-raised text-modal-body" type="submit" name="commit" value="Update">Update</md-button>
        </md-input-container>

        <br><br>
        <md-divider></md-divider>
        <br><br>

        Unhappy?
        <br><br>
        <md-button data-confirm="Are you sure?" type="submit" class="md-accent text-modal-body" value="Cancel my account">Cancel My Account</md-button>
        <br>
          
        
      </md-content>
    </md-tab>
  </md-tabs>

<% end %>


