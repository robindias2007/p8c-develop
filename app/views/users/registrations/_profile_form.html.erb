<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

    <div class="form-group">
      <%= f.label :Profile_Picture %>
      <%= f.file_field :avatar %>
    </div>

    <div id="target">
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "Email", autofocus: true, disabled: true,  class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Username", autofocus: true, disabled: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Name", autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :Edit_Description %>
      <%= f.text_area :author, id:"textfield", placeholder: 'Description' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="form-group">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div align="center">
      <p>To Change Password Click Here</p>
      <%= button_tag 'Change Password', type: 'button', class: 'changepass change-password submit-btn' %>
    </div>

    <div class="form-group" style="display: none" id="newpass">
      <%= f.label :New_Password %>
      <%= f.password_field :password, id:"textfield", autocomplete: "off", placeholder: 'New Password' %>
      <% if @minimum_password_length %>
          <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="form-group" style="display: none" id="newpasscof">
      <%= f.label :New_Password_Confirmation %>
      <%= f.password_field :password_confirmation, id:"textfield", autocomplete: "on", placeholder: 'New Password Confirmation' %>
    </div>


    <div class="actions">
      <%= f.submit "Update", class:"changepass" %>
    </div>

<% end %>