<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <md-tabs md-dynamic-height md-border-bottom>
    <md-tab label="Profile Settings">
      <md-content class="md-padding">
        <h1 class="md-display-2"></h1>
        
        <div class="form-group">
          <%= f.label :Profile_Picture %>
          <%= f.file_field :avatar %>
        </div>

        <div id="target">
        </div>

        <md-input-container class="md-block md-accent">
          <label>Email</label>
          <%= f.text_field :email, disabled: true %>
        </md-input-container>

        <md-input-container class="md-block md-accent">
          <label>Username</label>
          <%= f.text_field :username, disabled: true %>
        </md-input-container>

        <md-input-container class="md-block md-accent">
          <label>Name</label>
          <%= f.text_field :name %>
        </md-input-container>

        <md-input-container class="md-block md-accent">
          <label>Edit Description</label>
          <textarea value='"<%= resource.author %>"' name="user[author]" id="user_author" rows="5" md-select-on-focus ><%= resource.author %></textarea>
        </md-input-container>

        <md-button class="md-raised md-accent" type="submit" name="commit1" value="Update">Update
        </md-button>  
        
      </md-content>
    </md-tab>
    
    <md-tab label="Category Preferences">
      <md-content class="md-padding">
        <p class=""> Select minimum 3 categories of your choice:</p>
        
        
          <md-list ng-repeat="item in categories">
            <md-list-item>
              <p class="md-subhead text-modal-body">{{item}}</p>              
              <md-checkbox ng-checked="exists(item, user_categories)" ng-click="toggle(item, user_categories)">                
              </md-checkbox>
            </md-list-item>
          </md-list>
        
        <md-button class="md-raised md-accent" ng-disabled="checkBoxValidation()" ng-click="UpdateCategory()" data-dismiss="modal">Update</md-button>
      </md-content>
    </md-tab>
    
    <md-tab label="Privacy & Other">
      <md-content class="md-padding">
        <h1 class="md-display-2"></h1>
        
        <md-button>
          <p>Change Password</p>
        </md-button>
        <br>

        <md-input-container class="md-block">
          <label>Password</label>
          <%= f.password_field :password %>
        </md-input-container>

        <md-input-container class="md-block">
          <label>Password Confirmation</label>
          <%= f.password_field :password_confirmation %>
          <br><br><br>
          <md-button class="md-raised md-accent" type="submit" name="commit" value="Update">Update</md-button>
        </md-input-container>

        <br><br>
        <md-divider></md-divider>
        <br><br>

        <md-button data-confirm="Are you sure?" type="submit" class="md-raised md-accent" value="Cancel my account">Cancel My Account</md-button>
        <br>
          
        
      </md-content>
    </md-tab>
  </md-tabs>

<% end %>


