<%= form_for @user, html: { id: "sign_up_edit" } do |f| %>

    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: "form-control" %>
    </div>

    <% if @user.email.blank? %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Username", autofocus: true, required: "required", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Name", autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :author, placeholder: "Description", autofocus: true, required: "required", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :category_id %>
  
    <%= f.collection_check_boxes :category_id, Category.all, :id, :category_name %>   
    </div>



    <div class="text-center">
      <a class="sign-up-link btn btn-default sign-up-cat">Next</a>
    </div>

<% end %>