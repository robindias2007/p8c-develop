<%= form_for @user do |f| %>

    <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: "form-control" %>
    </div>

    <% if @user.email.blank? %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Username", autofocus: true, required: "required", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "Name", autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :author, placeholder: "Description", autofocus: true, required: "required", class: "form-control" %>
    </div>

    <div class="text-center">
      <%= f.submit "Continue", class: "btn btn-default" %>
    </div>

<% end %>