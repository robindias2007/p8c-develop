<%= form_for(resource, as: resource_name, validate:true, url: session_path(resource_name), remote: true) do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :Email %>
      <%= f.email_field :email, placeholder:"E-mail", id:'textfield' %>
    </div>

    <div class="form-group">
      <%= f.label :Password %>
      <%= f.password_field :password, placeholder:"Password", id:'textfield'  %>
    </div>
    <div class="terms-condition">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <% end -%>
    </div>

    <div class="text-center">
      <%= f.submit "Sign In", class: "btn btn-default"%>
    </div>

<% end %>
